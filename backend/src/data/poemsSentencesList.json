[
  {
    "id": 1,
    "title": "春晓",
    "author": "孟浩然",
    "content": "夜来风雨声，花落知多少。",
    "dynasty": "唐",
    "type": "五言绝句",
    "tags": ["春天", "自然"]
  },
  {
    "id": 2,
    "title": "鸟鸣涧",
    "author": "王维",
    "content": "人闲桂花落，夜静春山空。",
    "dynasty": "唐",
    "type": "五言绝句",
    "tags": ["山水", "自然"]
  },
  {
    "id": 3,
    "title": "春望",
    "author": "杜甫",
    "content": "感时花溅泪，恨别鸟惊心。",
    "dynasty": "唐",
    "type": "五言律诗",
    "tags": ["战争", "忧国"]
  },
  {
    "id": 4,
    "title": "虞美人",
    "author": "李煜",
    "content": "春花秋月何时了，往事知多少。",
    "dynasty": "五代",
    "type": "词",
    "tags": ["亡国", "哀思"]
  },
  {
    "id": 5,
    "title": "金缕衣",
    "author": "杜秋娘",
    "content": "花开堪折直须折，莫待无花空折枝。",
    "dynasty": "唐",
    "type": "七言绝句",
    "tags": ["劝诫", "惜时"]
  },
  {
    "id": 6,
    "title": "月下独酌",
    "author": "李白",
    "content": "花间一壶酒，独酌无相亲。",
    "dynasty": "唐",
    "type": "五言古诗",
    "tags": ["孤独", "饮酒"]
  },
  {
    "id": 7,
    "title": "桃花庵歌",
    "author": "唐寅",
    "content": "桃花仙人种桃树，又摘桃花换酒钱。",
    "dynasty": "明",
    "type": "七言古诗",
    "tags": ["隐逸", "桃花"]
  },
  {
    "id": 8,
    "title": "早梅",
    "author": "张谓",
    "content": "不知近水花先发，疑是经冬雪未消。",
    "dynasty": "唐",
    "type": "七言绝句",
    "tags": ["梅花", "早春"]
  },
  {
    "id": 9,
    "title": "十五夜望月寄杜郎中",
    "author": "王建",
    "content": "中庭地白树栖鸦，冷露无声湿桂花。",
    "dynasty": "唐",
    "type": "七言绝句",
    "tags": ["中秋", "思乡"]
  },
  {
    "id": 10,
    "title": "春雪",
    "author": "韩愈",
    "content": "白雪却嫌春色晚，故穿庭树作飞花。",
    "dynasty": "唐",
    "type": "七言绝句",
    "tags": ["春天", "雪"]
  }
]
