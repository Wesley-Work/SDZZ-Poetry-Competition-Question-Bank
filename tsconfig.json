{
  "compilerOptions": {
    /* Language and Environment */
    "target": "esnext",
    "lib": [ "esnext", "dom", "dom.iterable", "scripthost"],
    "jsx": "preserve",

    /* Modules */
    "module": "esnext",
    "rootDir": ".",
    "moduleResolution": "bundler",
    "baseUrl": "./",
    "resolveJsonModule": true,

    /* JavaScript Support */
    "allowJs": true,

    /* Emit */
    "declaration": true,  
    "outDir": "lib",
    "removeComments": true,

    /* Interop Constraints */
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,

    /* Type Checking */
    // TODO: 待开启
    // "strict": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": false,

    /* Completeness */
    "skipLibCheck": true,

  },
  "include": [
    "./**/*.ts",
    "./**/*.tsx",
    "./**/*.vue",
  ],
  "exclude": [
    "node_modules",
    "dist",
    "lib",
    "cjs",
    "esm",
    "es",
    "global.d.ts"
  ]
}
